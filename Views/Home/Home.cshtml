@model Both
<div class="row">
  <h2 class="center-align" style="color:pink;"><b>Wedding Planner</b></h2>
</div>
<div class="row">
<!-- Registration -->
  <div class="col s6">
    <h4>Register</h4>
    <form asp-action="Register" method="post">
      <span asp-validation-for="user.fName" style="color: red;"></span>
      <label asp-for="user.fName"></label>
      <input asp-for="user.fName" placeholder="John">

      <span asp-validation-for="user.lName" style="color: red;"></span>
      <label asp-for="user.lName"></label>
      <input asp-for="user.lName" placeholder="Doe">

      <span asp-validation-for="user.Email" style="color: red;"></span>
      <label asp-for="user.Email"></label>
      <input asp-for="user.Email" placeholder="example@email.com">

      <span asp-validation-for="user.Password" style="color:red;"></span>
      <label asp-for="user.Password"></label>
      <input asp-for="user.Password">

      <span asp-validation-for="user.Confirm" style="color:red;"></span>
      <label asp-for="user.Confirm"></label>
      <input asp-for="user.Confirm">
      <button class="waves-effect waves-light btn">Register</button>
    </form>
  </div>

  <!-- Login -->
<div class="col s6">
  <h4>Login</h4>
    <form asp-action="Login" method="post">
      <span asp-validation-for="login.Email" style="color: red;"></span>
      <label asp-for="login.Email"></label>
      <input asp-for="login.Email" placeholder="your@email.com">
  
      <span asp-validation-for="login.Password" style="color:red;"></span>
      <label asp-for="login.Password"></label>
      <input asp-for="login.Password">
      <button class="waves-effect waves-light btn">Login</button>
    </form>
</div>
</div>